# before using futaba_match
$$ cd src/ 
$$ make
$$ sudo make install


# data format
see var/color.txt


# make index (weighted by tfidf)
$$ futaba_make_tfidf.pl < var/color.txt > var/color.tfidf
$$ tsubomi_mkary -l var/color.tfidf

# use futaba_match (weighted by tfidf)
$$ futaba_match var/color.tfidf < var/color.txt


# make index (weighted by sgd-svm)
$$ futaba_make_svm.pl 10 0.1 < var/color.txt > var/color.svm
$$ tsubomi_mkary -l var/color.svm

# use futaba_match (weighted by sgd-svm)
$$ futaba_match var/color.svm < var/color.txt


